{
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../../public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "lib": ["es6", "dom"]
  },
  "include": ["../../app/**/*", "../**/*"],
  "exclude": ["node_modules"]
}
