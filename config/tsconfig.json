{
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../../../dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "lib": ["es6", "dom"]
  },
  "include": ["../../../app/**/*", "../**/*"],
  "exclude": [
    "node_modules",
    "../scripts/build.js",
    "../scripts/compile.js",
    "../scripts/dev.js",
    "../scripts/pux.js",
    "../scripts/start.js"
  ]
}
