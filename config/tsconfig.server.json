{
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "outDir": "../../../dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "lib": ["es6", "dom"]
  },
  "include": ["../../../app/**/*", "../**/*"],
  "exclude": ["node_modules"]
}
